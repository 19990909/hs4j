<assembly>
	<id>bin-with-dependencies</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}
			</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>hs4j*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<files>
		<file>
			<source>README</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>NOTICE.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>LICENSE.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>